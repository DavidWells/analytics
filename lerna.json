{
  "conventionalCommits": true,
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "next"
      ],
      "message": "chore(release): :tada: :rocket: [skip ci]"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "package.json",
    "README.md"
  ]
}
